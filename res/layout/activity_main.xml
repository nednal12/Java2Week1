<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/searchField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter your zip code"/>
        
        <Button 
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Go"/>
        
    </LinearLayout>
    
    <GridLayout 
        android:id="@+id/dealdata"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:columnCount="2"
        android:padding="10dip">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deal Source: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deal Title: "
            style="@style/DealLabel"/>
        <TextView 
            android:id="@+id/data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DealInfo"/>
        
        
        
    </GridLayout>

</LinearLayout>
